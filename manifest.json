{
    "manifest_version": 3,
    "name": "Rickify",
    "description": "Rick roll text converter. For those who enjoy slowly torturing their friends as they wonder if they've simply gone crazy.",
    "version": "1.0",
    "content_scripts": [
      {
        "matches": ["*://*/*"],
        "all_frames": true,
        "js": ["contentScript.js"],
        "run_at": "document_end"
      }
    ],
    "action": {
        "default_icon": {
          "16": "img/icon.png",
          "24": "img/icon.png",
          "32": "img/icon.png"
        },
        "default_title": "Annlatin",
        "default_popup": "popup.html"
      }
}